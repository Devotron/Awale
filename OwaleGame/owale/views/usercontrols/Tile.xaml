<UserControl x:Class="OwaleGame.owale.views.usercontrols.Tile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OwaleGame.owale.views.usercontrols"
             xmlns:font="clr-namespace:OwaleGame.owale.views"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="150">

    <UserControl.Resources>
         <Style x:Key="CustomFont">
            <Setter Property="TextElement.FontFamily" Value="font:ressources/fonts/#african" />
        </Style>
    </UserControl.Resources>

   


    <UserControl.Background>
        <ImageBrush ImageSource="../ressources/img/game_tile.png"/>
    </UserControl.Background>
    <Grid>
        <Label Style="{DynamicResource CustomFont}" Content="{Binding Seeds}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="65"></Label>  
    </Grid>
</UserControl>
